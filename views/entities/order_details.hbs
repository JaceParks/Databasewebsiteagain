<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>  
            <th>Order Detail ID</th>
            <th>Quanity</th>
            <th>Total Price</th>
            <th>Item ID</th>
            <th>Store ID</th>
            <th>Order ID</th>
        </tr>
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,400,700" rel="stylesheet">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css" crossorigin="anonymous">

    <link rel="stylesheet" href="../css/style.css" />
    </thead>

    {{!-- Body section --}}
    <tbody>
            <header>
      <div class="bannerImage">
        <div class="bannerText">
          <a href="#"><h1 class="mainTitle">Grocery Shopping Database</h1></a>
        </div>
      </div>

      <nav>
        <ul class="barList">
          <li class="home-link"><a href="/">Home</a></li>
          <li class="customers-link"><a href="/customers">Customers</a></li>
          <li class="items-link"><a href="/items">Items</a></li>
          <li class="order_details-link"><a href="/order_details">Order Information</a></li>
          <li class="orders-link"><a href="/orders">Orders</a></li>
          <li class="payments-link"><a href="payments">Payments</a></li>
          <li class="stores-link"><a href="/stores">Stores</a></li>
        </ul>
      </nav>
    </header>
        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.order_details_id}}</td>
            <td>{{this.quantity}}</td>
            <td>{{this.total_price}}</td>
            <td>{{this.item_id}}</td>
            <td>{{this.store_id}}</td>
            <td>{{this.order_id}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<form action="/order_details" method="post">
  <label for="Quantity">Quantity:</label>
  <input type="text" id="quantity" name="quantity"><br><br>
  <label for="Total">Total:</label>
  <input type="text" id="total_price" name="total_price"><br><br>
  <label for="Item ID">Item ID:</label>
  <input type="text" id="item_id" name="item_id"><br><br>
  <label for="Store ID">Store ID:</label>
  <input type="text" id="store_id" name="store_id"><br><br>
  <label for="Order ID">Order ID:</label>
  <input type="text" id="order_id" name="order_id"><br><br>
  <label for="order_details_id">Search order details by ID:</label>
  <input type="text" id="order_details_id" name="order_details_id"><br><br>
  <input type="submit" name="add_order_details" value="Add Order">
  <input type="submit" name="delete_order_details" value="Delete Order">
  <input type="submit" name="update_order_details" value="Update Order">
  <input type="submit" name="search_order_details" value="Search Order Details by ID">
  <input type="submit" name="display_all" value="Display All">
</form>