<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            <th>Customer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
        </tr>
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,400,700" rel="stylesheet">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css" crossorigin="anonymous">

    <link rel="stylesheet" href="../css/style.css" />
    </thead>

    {{!-- Body section --}}
    <tbody>
            <header>
      <div class="bannerImage">
        <div class="bannerText">
          <a href="#"><h1 class="mainTitle">Grocery Shopping Database</h1></a>
        </div>
      </div>

      <nav>
        <ul class="barList">
          <li class="home-link"><a href="/">Home</a></li>
          <li class="customers-link"><a href="/customers">Customers</a></li>
          <li class="items-link"><a href="/items">Items</a></li>
          <li class="order_details-link"><a href="/order_details">Order Information</a></li>
          <li class="orders-link"><a href="/orders">Orders</a></li>
          <li class="payments-link"><a href="payments">Payments</a></li>
          <li class="stores-link"><a href="/stores">Stores</a></li>
        </ul>
      </nav>
    </header>
        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr class="customerData">
            <td>{{this.customer_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone_number}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<form action="/customers" method="post">
  <label for="first_name">First name:</label>
  <input type="text" id="first_name" name="first_name"><br><br>
  <label for="last_name">Last name:</label>
  <input type="text" id="last_name" name="last_name"><br><br>
  <label for="Email">Email:</label>
  <input type="text" id="email" name="email"><br><br>
  <label for="Phone Number">Phone Number:</label>
  <input type="text" id="phone_number" name="phone_number"><br><br>
  <input type="submit" value="Add Customer">

</form>
